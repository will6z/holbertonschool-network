#!/bin/bash

# Check if the script is run as root
if [[ $EUID -ne 0 ]]; then
  echo "This script must be run as root. Use sudo."
  exit 1
fi

# Backup the current /etc/hosts file
cp /etc/hosts /etc/hosts.bak

# Update the /etc/hosts file
# Replace 'localhost' IP and add 'facebook.com' entry
echo "127.0.0.2 localhost" > /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts

# Display a message to indicate completion
echo "The /etc/hosts file has been updated successfully."

# To check the changes, you can run: ping localhost and ping facebook.com

